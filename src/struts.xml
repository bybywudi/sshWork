			<result name="error">/WEB-INF/content/regist.jsp</result>
			<result name="success">/WEB-INF/content/regist.jsp</result>
		</action>
		
		<!-- 进入打卡 -->
		<action name="*Punch" 
			class="action.PunchAction">
			<interceptor-ref name="empStack"/>
